#!/usr/bin/env node

var http = require('http');
var options = {
  host: 'localhost',
  port: 3080,
  path: '/submit/metrics',
  method: 'POST',
  headers: {
    "Accept": "application/json",
    "Content-Type": "application/json"
  }
};
var payload = {
  "events": [{
    "type": "shopping",
    "timestamp": 1316068487456,
    "duration": 1200,
    "source": "10.69.235.121",
    "visitor": "a815ee70-df67-11e0-9572-0800200c9a66",
