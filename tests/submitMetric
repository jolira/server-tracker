    "metrics": {
      "remotePerformance": [{
        "timestamp": 1316068487831,
        "duration": 200,
        "url": "http://mobile.shopping.co.uk/loadSomething"
      }, {
        "timestamp": 1316068488039,
        "duration": 129,
        "url": "http://mobile.shopping.co.uk/loadSomethingElse"
      }],
      "barcode-scan": {
        "action": "multiple",
        "barcode": "003452135"
      },
      "view-favorites": {}
    }
  }, {
    "type": "shopping",
    "timestamp": 1316068478532,
    "duration": 2432,
    "source": "10.69.235.121",
    "visitor": "a815ee70-df67-11e0-9572-0800200c9a66",
